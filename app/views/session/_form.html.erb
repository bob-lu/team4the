<%= form_for :session, :url => login_path do |f| %>
	<div class="field">
		<%= f.text_field :username, :placeholder => "Username" %>
	</div>
	<div class="field">
		<%= f.password_field :password, :placeholder => "Password" %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>